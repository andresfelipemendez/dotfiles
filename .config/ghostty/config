# Ghostty Configuration

# Font
font-family = JetBrains Mono
font-size = 14

# Window
window-padding-x = 8
window-padding-y = 8
window-decoration = true

# Theme
theme = GruvboxDark

# Cursor
cursor-style = block
cursor-style-blink = false

# Shell integration
shell-integration = zsh

# macOS specific
macos-option-as-alt = true

# Keybindings
# Cmd+T sends tmux prefix (Ctrl+B) + c to create new tmux window
keybind = cmd+t=text:\x01c
keybind = cmd+w=text:\x01x
